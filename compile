#!/usr/bin/ruby
require 'optparse'

usage = "Usage: ./compile [-d | --debug] filename.wacc"

options = {}
opts = OptionParser.new do |opts|
  opts.banner = usage

  opts.on("-d", "--debug") do |d|
    options[:debug] = d
  end

  opts.on_tail("-h", "--help") do |v|
    puts opts
    exit
  end
end.parse!

if !ARGV[0]
  puts usage
  exit
end


if options[:debug]
  exit_spec()
else
  build_spec()
end

puts "TODO: setup this script to call your WACC compiler"
